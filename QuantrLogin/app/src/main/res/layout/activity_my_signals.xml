    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".experiments.MySignals">

    <TextView
        android:id="@+id/mySignalsText"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35dp"
        android:fontFamily="monospace"
        android:text="@string/mySignals"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addNewSignal"
        android:layout_width="173dp"
        android:layout_height="58dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/GoldYellow"
        android:text="@string/addNewSignal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="115dp"
        android:id="@+id/linearLayout"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/addSignal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="275dp"
            android:src="@android:drawable/ic_input_add" />
    </LinearLayout>

