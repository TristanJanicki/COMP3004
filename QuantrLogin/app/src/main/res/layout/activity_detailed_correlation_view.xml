<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailedCorrelationView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".experiments.DetailedCorrelationView">

        <com.github.mikephil.charting.charts.ScatterChart
            android:id="@+id/scatterChart"
            android:layout_width="330dp"
            android:layout_height="225dp"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.205" />


        <EditText
            android:id="@+id/editText2"
            android:layout_width="105dp"
            android:layout_height="35dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="128dp"
            android:layout_marginEnd="173dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Correlation:"
            android:textColor="#F1EDED"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scatterChart" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="33dp"
            android:layout_height="20dp"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="246dp"
            android:text="@string/textName"
            android:textColor="#F1EDED"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scatterChart" />

</androidx.constraintlayout.widget.ConstraintLayout>