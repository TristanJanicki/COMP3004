<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailedThresholdView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".experiments.DetailedThresholdView">

        <com.github.mikephil.charting.charts.CandleStickChart
            android:id="@+id/candle_stick"
            android:layout_width="330dp"
            android:layout_height="225dp"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.11" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:layout_marginTop="256dp"
            android:layout_marginEnd="168dp"
            android:background="#4CAF50"
            android:text="Notify Me"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/candle_stick" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="86dp"
            android:layout_marginBottom="121dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Occurences This Year"
            android:textColor="#F1EDED"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/candle_stick" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="34dp"
            android:layout_marginRight="34dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="0/10"
            android:textColor="#F1ECEC"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editText2"
            app:layout_constraintTop_toBottomOf="@+id/candle_stick" />
</androidx.constraintlayout.widget.ConstraintLayout>