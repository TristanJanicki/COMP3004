<!--            android:text="@string/newSignals"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintHorizontal_bias="0.5"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/mySignals" />-->

        <Button
            android:id="@+id/signalCalender"
            android:layout_width="140dp"
            android:layout_height="56dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/GoldYellow"
            android:text="@string/signalCalender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mySignals" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="56dp" />
        <!--            app:layout_constraintTop_toBottomOf="@+id/newSignals" />-->

<!--        <Button-->
